{
  "release-type": "rust",
  "commit-search-depth": 100,
  "bump-minor-pre-major": true,
  "packages": {
    "skim": {
      "changelog-path": "/CHANGELOG.md",
      "include-component-in-tag": false
    },
    "e2e": {
      "skip-github-release": true,
      "commit-search-depth": 0,
      "exclude-paths": [
        "/"
      ]
    },
    "xtask": {
      "skip-github-release": true,
      "commit-search-depth": 0,
      "exclude-paths": [
        "/"
      ]
    }
  },
  "plugins": [
    "cargo-workspace"
  ]
}
