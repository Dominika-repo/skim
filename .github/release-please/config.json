{
  "$schema": "https://github.com/googleapis/release-please/raw/refs/heads/main/schemas/config.json",
  "release-type": "rust",
  "commit-search-depth": 100,
  "bump-minor-pre-major": true,
  "separate-pull-requests": false,
  "tag-separator": "@",
  "always-update": true,
  "group-pull-request-title-pattern": "chore: release",
  "plugins": [
    {
      "type": "cargo-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "main",
      "components": ["root", "skim", "e2e", "xtask", "common", "tuikit", "shell"]
    }
  ],
  "packages": {
    ".": {"component": "root"},
    "skim": {
      "skip-github-release": true
    },
    "xtask": {
      "skip-github-release": true
    },
    "e2e": {
      "skip-github-release": true
    },
    "common": {
      "skip-github-release": true
    },
    "tuikit": {
      "skip-github-release": true
    },
    "shell": {
      "release-type": "simple",
      "skip-github-release": true
    }
  }
}
